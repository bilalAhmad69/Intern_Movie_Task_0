<!DOCTYPE html>
<html>
  <link rel="stylesheet" href="./style.css">
    <style>
      
          {{!-- Common Style in All Pages--}}
          <style>
            header {
         display: flex;
         justify-content: space-around;
                 
          }
       button{
            background-color: none;
            height:  40px;
            width : 100px;
            font-size: 15px;
        }
      .pagesName > a{
       font-size: 30px;
       text-decoration: none;
       margin-right: 10px;
      }
        
                {{!-- Style of this page --}}
        .container{
                    display: grid;
                    border: 1px solid black;
                    grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
                    gap: 10px;
                    width:75%;
                    height: 100vh;
                    margin: auto;
                    justify-content: center;
        }
        .card {
                    
                    height: 150px;
                    margin-right: 5px;
        }
        .img img
        {
          width:100%;
          height: 97%;
        }
    </style>

    <body>
       <header>
      <div>
        {{#if isAuthenticated}}
    <a href="http://localhost:3000/logout"> <Button> Log Out </Button></a>
        {{else}}
    <a href="http://localhost:3000/login"> <Button > Login </Button></a>
      {{/if}}
    </div>
    <div class="pagesName">
    <a href="http://localhost:3000/api/movies"> Movies  </a>
    <a href="http://localhost:3000/api/actors"> Actors  </a>
    </div>
      </header>
    {{!-- All the links for different Pages --}}
     </div>
     <div id="btns">

       {{!-- Pagination --}}
     </div>
    <div class="container">
      
   {{#each actors as |actor|}}
   <div class="card">
  <a class="img" href= "http://localhost:3000/api/actors/{{actor._id}}"><img  src="{{actor.picture}}" alt="picture not found"></a>
  <p> Name : {{actor.firstName}}</p>
   </div>
    {{/each}}
    </div>
    </body>

    <script>
     const value = {{numberOfPages}}
     for (page = 1 ; page <= value; page++) 
     {
       
      const href =  document.createElement("a")
        href.setAttribute('href',`http://localhost:3000/api/actors?page=${page}`);
        const btn = document.createElement("button");
        const pgNo = document.createTextNode(page);
        btn.append(pgNo)
        href.appendChild(btn)
       document.getElementById("btns").appendChild(href);
     }
    </script>
   
</html>
